<FluentStack HorizontalAlignment="@Alignment">
    <FluentTextField @bind-Value="@rebox.BoxNo" Placeholder="Enter TDW Box..." />
    <FluentNumberField @bind-Value="@rebox.BoxCount" Disabled Size="5"></FluentNumberField>
    <FluentLabel>Mini Box</FluentLabel>
    <FluentNumberField @bind-Value="@rebox.MiniBox"></FluentNumberField>
    <FluentNumberField @bind-Value="@rebox.MiniBox" Disabled Size="5"></FluentNumberField>
    <FluentTextField @bind-Value="@rebox.RegType" Placeholder="Regtype" Disabled/>
    <FluentButton Appearance="Appearance.Accent" IconStart="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size16.Box())" Title="Manual Capture" OnClick="btnLoadBox_Click">Load</FluentButton>
</FluentStack>

@code {
    [Parameter]
    public Reboxing rebox { get; set; } = new();

    [Parameter]
    public bool ShowLoad { get; set; }

    [Parameter]
    public HorizontalAlignment Alignment { get; set; } = HorizontalAlignment.Left;

    [Parameter]
    public EventCallback OnloadBox { get; set; }

    private void btnLoadBox_Click()
    {
        OnloadBox.InvokeAsync();
    }
}
