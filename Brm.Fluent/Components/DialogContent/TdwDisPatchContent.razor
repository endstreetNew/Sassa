@implements IDialogContentComponent<Waybill>

    <FluentTextField @bind-Value=@Content.WaybillNo Label="Waybill #" Placeholder="<Enter Waybill>"/>
    <FluentTextField @bind-Value=@Content.BrmWaybill Label="Brm waybill #" Placeholder="Brm Waybill #"/>
    <FluentTextField @bind-Value=@Content.CourierName Label="Courier" Placeholder="TDW"/>
    <hr />
<FluentButton Appearance="Appearance.Accent" OnClick="@(async () => await btnSave())" >Save</FluentButton>
<hr/>
<strong>@message</strong>


@code {
    [Parameter]
    public Waybill Content { get; set; } = default!;

    [CascadingParameter]
    public FluentDialog? Dialog { get; set; }

    string message = "";

    protected async Task btnSave()
    {
         if (string.IsNullOrEmpty(Content.WaybillNo))
        {
            message = "The TDW waybill no is required.";
            return;
        }
        Dialog!.TogglePrimaryActionButton(true);
        await Dialog.CloseAsync(Content);
    }


}
