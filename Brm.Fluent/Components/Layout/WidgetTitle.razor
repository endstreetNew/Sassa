<div class="widgetTitle">
    <FluentStack Orientation="Orientation.Horizontal">
        <h5>@Title</h5>
        @if (Loading)
        {
            <FluentSpacer />
            <FluentProgressRing></FluentProgressRing>
        }
    </FluentStack>
</div>
@code {
    [Parameter]
    public string Title { get; set; } = "";
    [Parameter]
    public bool Loading { get; set; }
}
