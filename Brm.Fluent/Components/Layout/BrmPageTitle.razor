<div class="pageTitle">
<FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center">
        <h3>@Title</h3>
        @if (Loading)
        {
            <FluentSpacer />
            <FluentProgressRing></FluentProgressRing>
        }
</FluentStack>
</div>
@code {
    [Parameter]
    public string Title { get; set; } = "";
    [Parameter]
    public bool Loading { get; set; }
}
