@if (Node != null)
{
    @foreach (FileTreeNode node in Node.Values.OrderBy(o => o.NodeName))
    {
        if (!node.NodeType)//Is Folder
        {
            @node.NodeName

            @foreach (var child in node.Values.Where(e => e.ParentId == node.Id))
            {
                <PdfBrowser Node="child" />
            }
        }
        else
        {
            <FluentAnchor Href="#" OnClick="@(() => OnPreview(node.NodeName))">@node.NodeName</FluentAnchor>
        }

    }
}
else
{
    <p>No Files.</p>
}

@code {

    [Parameter]
    public FileTreeNode? Node { get; set; }
    [Parameter]
    public EventCallback<string> Preview { get; set; }

    protected void OnPreview(string? fileName)
    {
        Preview.InvokeAsync(fileName);
    }
}
