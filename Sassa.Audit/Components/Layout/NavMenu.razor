<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavLink Href="brmdata" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">BRM Records</FluentNavLink>
            <FluentNavLink Href="tdwdata" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">TDW Records</FluentNavLink>
            <FluentNavLink Href="misdata" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">MIS Records</FluentNavLink>
            <FluentNavLink Href="ecdata" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">EC Records</FluentNavLink>
            <FluentNavLink Href="download" Icon="@(new Icons.Regular.Size20.ArrowDownload())" IconColor="Color.Accent">Download Data</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
