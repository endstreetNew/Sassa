@page "/inpayment"
@using Sassa.BRM.Data.ViewModels

@inject Helper helper
@inject IToastService toast
@inject IDbContextFactory<ModelContext> dbContextFactory
@inject StaticService sservice

<BrmPageTitle Title="In Payment Data" Loading="@loading"></BrmPageTitle>
<FluentStack Orientation="Orientation.Vertical">
    <WidgetTitle Title="Filter Options" />
    <FluentStack Orientation="Orientation.Horizontal">
        @*         <FluentDatePicker Placeholder="<From Date>" @bind-Value="period.FromNullDate" />
        <FluentDatePicker Placeholder="<To Date>" @bind-Value="period.ToNullDate" /> *@
        <FluentSelect TOption="KeyValuePair<string,string>" Items="@sservice.GetAuditRegions().ToList()" Placeholder="<Region>" OptionValue="@(p => p.Key)" OptionText="@(p => p.Value)" @bind-Value="@office.RegionId" />
        <FluentSelect TOption="KeyValuePair<string,string>" Items="@ogaStatusOptions" Placeholder="<Oga Status>" OptionValue="@(p => p.Key)" OptionText="@(p => p.Value)" @bind-Value="@ogaStatus" />
        <FluentSelect TOption="KeyValuePair<string,string>" Items="@regTypeOptions" Placeholder="<Reg Type>" OptionValue="@(p => p.Key)" OptionText="@(p => p.Value)" @bind-Value="@regType" />
        <FluentButton Appearance="Appearance.Accent" @onclick="ValidateReportFilter">Save Report</FluentButton>
    </FluentStack>
    <WidgetTitle Title="Search" />
    <FluentStack>
        <FluentTextField @bind-Value="@searchId" Placeholder="Enter Id/Filenumber..." />
        <FluentButton Appearance="Appearance.Accent" IconEnd="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size16.Search())" Title="Search" OnClick="@(async () => SearchMis())"></FluentButton>
    </FluentStack>
    <hr />

    <FluentDataGrid Items="@misFiles" TGridItem="Inpayment" Pagination="@paginationState">
        <PropertyColumn Title="ID No" Property="f => f.ApplicantNo" />
        <PropertyColumn Title="Name" Property="f => f.FirstName" />
        <PropertyColumn Title="Surname" Property="f => f.Surname" />
        <PropertyColumn Title="Grant Type" Property="f => f.GrantType" />
        <PropertyColumn Title="Child Id No" Property="f => f.ChildIdNo" />
        <PropertyColumn Title="App Date" Property="f => f.TransDate" />
        <PropertyColumn Title="Clm No" Property="f => f.ClmNo" />
        <PropertyColumn Title="Brm Barcode" Property="f => f.BrmBarcode" />
        <PropertyColumn Title="MIS Number" Property="f => f.MisFileNo" />
        <PropertyColumn Title="ECMIS Number" Property="f => f.EcMisFile" />
        <PropertyColumn Title="OGA satus" Property="f => f.OgaStatus" />
        <PropertyColumn Title="Region Id" Property="f => f.RegionId" />
        <PropertyColumn Title="Registry Type" Property="f => f.RegType" />
    </FluentDataGrid>
    <FluentPaginator State="@paginationState" />
</FluentStack>


@code {
    protected IQueryable<Inpayment> misFiles = Enumerable.Empty<Inpayment>().AsQueryable();
    protected string searchId = "";
    PaginationState paginationState = new PaginationState { ItemsPerPage = 15 };

    //FilterOptions
    protected UserOffice office = new();
    protected List<KeyValuePair<string, string>> ogaStatusOptions = new();
    protected List<KeyValuePair<string, string>> regTypeOptions = new();
    protected string regType = "";
    protected string ogaStatus  = "";
    protected bool loading = true;

    protected ReportDefinition report = new();

    protected override void OnInitialized()
    {

        context = dbContextFactory.CreateDbContext();
        report = new ReportDefinition { ReportIndex = "1", ReportName = "In Payment Files", FilterOptions = new FilterOptions() { "Region", "OgaStatus", "RegType", } };
        misFiles = context.Inpayments.AsQueryable();
        InitializeFilterData();
        loading = false;
    }

    protected void SearchMis()
    {
        if(string.IsNullOrEmpty(searchId) || searchId.Length < 13)
        {
            toast.ShowError("Please enter a valid applicant id.");
            return;
        }
        try
        {
            misFiles = context.Inpayments.Where(x => x.ApplicantNo == searchId);
        }
        catch(Exception ex)
        {
            toast.ShowError(ex.Message);
        }
    }
    private ModelContext context = default!;

    private void ValidateReportFilter()
    {
        misFiles = context.Inpayments.AsQueryable();
        try
        {
            foreach (var option in report.FilterOptions)
            {
                switch (option)
                {
                    case "Region":
                        if (string.IsNullOrEmpty(office.RegionId))
                        {
                            toast.ShowError($"Please select a Region.");
                            return;
                        }
                        misFiles = misFiles.Where(m => m.RegionId == office.RegionId);
                        break;
                    case "OgaStatus":
                        break;
                    case "RegType":
                        switch(regType)
                        {
                            case "All":
                                break;
                            case "LC":
                                misFiles = misFiles.Where(m => m.RegType.ToLower().Contains("lc"));
                                break;
                            case "MAIN":
                                misFiles = misFiles.Where(m => !m.RegType.ToLower().Contains("lc") && !m.RegType.Contains("None"));
                                break;
                            case "LCNOMAIN":

                                var lc = misFiles.Where(m => m.RegType.ToLower().Contains("lc"));
                                var main = misFiles.Where(m => !m.RegType.ToLower().Contains("lc") && !m.RegType.Contains("None"));

                                misFiles = lc.Where(i => !main.Any(n =>
                                n.ApplicantNo == i.ApplicantNo &&
                                n.GrantType == i.GrantType));

                                break;
                            case "None":
                                misFiles = misFiles.Where(m => m.RegType == "None");
                                break;
                        }
                        break;

                }
            }
            string RegionName;
            if (office.RegionId != "0")
            {
                RegionName = StaticDataService.RegionCode(office.RegionId);
            }
            else
            {
                RegionName = "NO REGION";

            }

            string FileName = helper.GetAuditFileName(report.ReportName.Replace(" ", "_"), RegionName);

            toast.ShowInfo($"{report.ReportName} queued.");

            ReportHeader header = new ReportHeader();
            // header.FromDate = period.FromDate.ToShortDateString();
            // header.ToDate = period.ToDate.ToShortDateString();
            int usernameIndex = FileName.IndexOf('-') + 1;
            header.Username = FileName.Substring(usernameIndex, FileName.Substring(usernameIndex).IndexOf("-"));//{_session.Office.RegionCode}-{_session.SamName.ToUpper()}-
            header.Region = RegionName;
            List<Inpayment> result = misFiles.ToList();//context.Inpayments.Where(m =>  m.RegionId == office.RegionId).ToList();
            result.ToCsv<Inpayment>(FileName, header, StaticDataService.ReportFolder);
        }
        catch (Exception ex)
        {
            toast.ShowError(ex.Message);
        }
    }
    protected void InitializeFilterData()
    {
        ogaStatusOptions = new List<KeyValuePair<string, string>>();
        ogaStatusOptions.Add(new KeyValuePair<string, string>("All", "All"));
        //Todo: Get OgaStatus from Alicia
        regTypeOptions = new List<KeyValuePair<string, string>>(); 
        regTypeOptions.Add( new KeyValuePair<string, string> ("All", "All"));
        regTypeOptions.Add(new KeyValuePair<string, string>("LC", "LC"));
        regTypeOptions.Add(new KeyValuePair<string, string>("MAIN", "MAIN"));
        regTypeOptions.Add(new KeyValuePair<string, string>("LCNOMAIN", "LC NO MAIN"));
        regTypeOptions.Add(new KeyValuePair<string, string>("None", "None"));
    }
    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}